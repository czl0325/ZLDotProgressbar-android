<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ZLDotProgressBar">
        <!-- 前进的速度 -->
        <attr name="barSpeed">
            <enum name="normal" value="80"/>
            <enum name="slow" value="120"/>
            <enum name="fast" value="40"/>
        </attr>
        <!-- 节点的数量 -->
        <attr name="barDotsCount" format="integer"/>
        <!-- 节点的圆半径 -->
        <attr name="barDotsRadius" format="dimension|reference"/>
        <!-- 进度条的宽度 -->
        <attr name="barProgressWidth" format="dimension|reference"/>
        <!-- 进度条的背景色 -->
        <attr name="barBackColor" format="color|reference"/>
        <!-- 进度条的前景色 -->
        <attr name="barFrontColor" format="color|reference"/>

    </declare-styleable>
</resources>